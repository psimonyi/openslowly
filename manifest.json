{
    "applications": {
        "gecko": {
            "id": "openslowly@ns.petersimonyi.ca",
            "strict_min_version": "60.0a1"
        }
    },

    "author": "Peter Simonyi",

    "background": {
        "scripts": ["background.js"]
    },
    
    "default_locale": "en_CA",

    "description": "Open bookmark folders slowly",

    "homepage_url": "https://github.com/psimonyi/openslowly",

    "manifest_version": 2,

    "name": "Open Bookmarks Slowly",

    "options_ui": {
        "browser_style": false,
        "page": "options.html"
    },

    "permissions": [
        "bookmarks",
        "menus",
        "storage",
        "webNavigation"
    ],

    "version": "1"
}
