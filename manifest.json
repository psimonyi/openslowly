{
    "applications": {
        "gecko": {
            "id": "openslowly@ns.petersimonyi.ca",
            "strict_min_version": "60.0a1"
        }
    },

    "author": "Peter Simonyi",

    "background": {
        "page": "background.html"
    },
    
    "default_locale": "en_CA",

    "description": "Open All in Tabs, just not all at once.",

    "homepage_url": "https://github.com/psimonyi/openslowly",

    "icons": {
        "16": "icon16.svg",
        "24": "icon24.svg",
        "64": "icon.svg"
    },

    "manifest_version": 2,

    "name": "Open Bookmarks Slowly",

    "options_ui": {
        "browser_style": false,
        "page": "options.html"
    },

    "optional_permissions": [
        "notifications"
    ],

    "permissions": [
        "bookmarks",
        "menus",
        "storage",
        "tabs",
        "webNavigation"
    ],

    "version": "1"
}
